<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      このフォームの入力内容には <%= pluralize(@user.errors.count, "個のエラー")%>があるよ？
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>